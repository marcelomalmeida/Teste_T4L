        <Button x:Name="btnMaximizar" Content="" HorizontalAlignment="Right" Margin="0,15,16,0" VerticalAlignment="Top" Width="18" Background="#FF323264" Foreground="{x:Null}" BorderBrush="#FF46E6FF" Height="18" Click="btnMaximizar_Click"/>
        <Button x:Name="btnCarrProd" Content="Listar" HorizontalAlignment="Left" Margin="61,318,0,0" VerticalAlignment="Top" Width="105" Click="btnCarrProd_Click" Height="50" FontSize="20" Background="#FFFFB940"/>
