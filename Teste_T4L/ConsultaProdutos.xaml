<Window x:Class="Teste_T4L.ConsultaProdutos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teste_T4L"
        mc:Ignorable="d"
        Title="Consultar Produtos" Height="380" Width="692" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFBFBFBF" Margin="0,0,-8,-8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="587*"/>
            <ColumnDefinition Width="105*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnVoltar" Content="Voltar" HorizontalAlignment="Left" Margin="558,189,0,0" VerticalAlignment="Top" Width="100" Click="btnVoltar_Click" Height="50" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="dataGridConsult" HorizontalAlignment="Left" Height="343" Margin="10,10,0,0" VerticalAlignment="Top" Width="519" IsReadOnly="True"/>
        <Button x:Name="btnCarrProd" Content="Carregar Produtos" HorizontalAlignment="Left" Margin="558,10,0,0" VerticalAlignment="Top" Width="100" Click="btnCarrProd_Click" Height="50" Grid.ColumnSpan="2"/>
        <Button x:Name="btnEditProd" Content="Editar" HorizontalAlignment="Left" Margin="558,99,0,0" VerticalAlignment="Top" Width="100" Click="btnEditProd_Click" Height="50" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
