        xmlns:local="clr-namespace:Teste_T4L"
        mc:Ignorable="d"
        Title="Consultar Produtos" Height="768" Width="1366" WindowStartupLocation="CenterScreen" WindowStyle="None" WindowState="Maximized">
    <Grid Background="#FFBFBFBF" Margin="0,0,-8,-8">
