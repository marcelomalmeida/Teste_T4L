        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teste_T4L"
        mc:Ignorable="d"
        Title="Nova Venda" Height="467" Width="576" WindowStartupLocation="CenterScreen">
    <Grid x:Name="none" Margin="0,0,2,0" Background="#FFBFBFBF">
        <TextBox x:Name="txtNomeCliente" HorizontalAlignment="Left" Height="23" Margin="91,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" IsEnabled="False"/>
        <TextBox x:Name="txtDocCliente" HorizontalAlignment="Left" Height="23" Margin="346,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199" IsEnabled="False"/>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="43,56,0,0" VerticalAlignment="Top"/>
        <Label Content="CPF:" HorizontalAlignment="Left" Margin="308,56,0,0" VerticalAlignment="Top"/>
        <GroupBox Header="Cliente" Height="80" Margin="604,2,-574,0" VerticalAlignment="Top" FontSize="15" FontWeight="Bold"/>
        <TextBox x:Name="txtCodigo" HorizontalAlignment="Left" Height="23" Margin="91,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59" KeyDown="txtCodigo_KeyDown"/>
        <Label Content="Código:" HorizontalAlignment="Left" Margin="37,139,0,0" VerticalAlignment="Top"/>
        <Label Content="Quantidade:" HorizontalAlignment="Left" Margin="176,139,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtQuantidade" HorizontalAlignment="Left" Height="23" Margin="254,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="59" PreviewTextInput="txtQuantidade_PreviewTextInput" KeyDown="txtQuantidade_KeyDown"/>
        <GroupBox Header="Produto" Height="80" Margin="604,122,-359,0" VerticalAlignment="Top" FontSize="15" FontWeight="Bold"/>
        <UniformGrid Margin="20,194,337,22">
            <DataGrid x:Name="dataGridPedVenda" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="535" Margin="6,0,-332,0">
                <DataGrid.Columns>
                    
                </DataGrid.Columns>
            </DataGrid>

        </UniformGrid>

    </Grid>
</Window>
